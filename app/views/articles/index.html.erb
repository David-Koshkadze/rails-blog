<h1>Articles</h1>

<p>There are <%= Article.public_count %> public articles</p>

<%= link_to "Create", new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= article.title %>
        <br>
        <%= link_to "See More", article %>
      </li>
    <% end %>
  <% end %>
</ul>